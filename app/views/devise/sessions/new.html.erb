<div class="auth-container">
    <h2>Sign In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "textfield" %>
        </div>

        <div class="field">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "textfield" %>
            <span class="show-password"><a noreferrer>Show</a></span>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field checkbox-container auth-checkbox-container">
                  <%= f.check_box :remember_me  %>
                  <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class="actions auth-center-container">
            <%= image_tag "activity-indicator.gif", id: "activity-indicator", class: "auth-loading-indicator invisible", alt: "Loading..." %>
            <%= f.submit "Sign in to your account", id:"sign-in-btn", class: "btn main-btn btn-primary" %>
        </div>
    <% end %>
    <div class="auth-center-container auth-sub-actions">
        <%= render "devise/shared/links" %>
    </div>
</div>
